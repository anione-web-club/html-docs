{
	"name": "html-docs",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"theme": "npm run theme:light && npm run theme:dark",
		"theme:light": "smui-theme compile static/smui-light.css -i src/theme",
		"theme:dark": "smui-theme compile static/smui-dark.css -i src/theme/dark",
		"deploy": "gh-pages -d build -t true",
		"predeploy": "npm run build"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.1",
		"@sveltejs/kit": "^1.5.0",
		"gh-pages": "^5.0.0",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"sveltestrap": "^5.10.0",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0"
	},
	"type": "module"
}
